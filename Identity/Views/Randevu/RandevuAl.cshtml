@model Identity.Models.Randevu

@{
    ViewData["Title"] = "Randevu Al";
}

<h2>Randevu Al</h2>

<hr />

<form asp-action="RandevuAl" method="post">
    <div class="form-group">
        <label asp-for="HastaAd">Hasta Adı:</label>
        <input asp-for="HastaAd" class="form-control" value="@User.Identity.Name" required />
        <span asp-validation-for="HastaAd" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HastaTc">Hasta TC:</label>
        <input asp-for="HastaTc" class="form-control" required />
        <span asp-validation-for="HastaTc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HastaTel">Telefon Numarası:</label>
        <input asp-for="HastaTel" class="form-control" required />
        <span asp-validation-for="HastaTel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RandevuTarih">Randevu Tarihi:</label>
        <input asp-for="RandevuTarih" type="datetime-local" class="form-control" required />
        <span asp-validation-for="RandevuTarih" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DoktorId">Doktor Seç:</label>
        <select asp-for="DoktorId" asp-items="@(new SelectList(ViewBag.Doktorlar, "Value", "Text"))" class="form-control">
            <option value="">- Doktor Seç -</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
