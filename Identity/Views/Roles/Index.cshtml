@model IEnumerable<AppRole>

	@{
    ViewData["Title"] = "Roller";
}

<a class="btn btn-primary" asp-action="Create">Rol Oluştur</a>
<hr>

<table class="table table-sm table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Role Adı</th>
			<th>Kullanıcılar</th>
			<th style="width: 120px"></th>
		</tr>
	</thead>
	<tbody>

		@if(Model.Count() == 0)
		{
			<tr><td colspan="4" class="text-center">Role Yok</td></tr>
		}

		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td asp-role-users="@role.Id"></td>
				<td>
					<a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Düzenle</a>
					<form asp-action="Delete" method="post" onsubmit="return confirm('emin misiniz')" style="display: inline-block;">
						<input type="hidden" value="@role.Id" name="Id">
						<button type="submit" class="btn btn-danger btn-sm">Sil</Button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>