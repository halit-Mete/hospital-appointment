@model AppRole

@{
    ViewData["Title"] = "Düzenle";
}

<h2>Rolü Düzenle</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input name="Id" type="hidden" value="@Model.Id" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3">
                <Button type="submit" class="btn btn-primary">Kaydet</Button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mb-3" asp-action="Index">Geri Dön</a>
</div>

<table class="table table-sm table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>UserName</th>
			<th>FullName</th>
			<th>Email</th>
			<th style="width: 75px"></th>
		</tr>
	</thead>
	<tbody>
        @if (ViewBag.Users != null)
        {
            @if (ViewBag.Users.Count == 0)
            {
                <tr><td colspan="4" class="text-center">Kullanıcı Yok</td></tr>
            }
            else
            {
                @foreach (var user in ViewBag.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Düzenle</a>
                        </td>
                    </tr>
                }
            }
        }

	</tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
