@model Identity.Models.Doktor

@{
    ViewData["Title"] = "Oluştur";
}

<h2>Doktor Oluştur</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoktorAd" class="control-label"></label>
                <input asp-for="DoktorAd" class="form-control" />
                <span asp-validation-for="DoktorAd" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PoliklinikId" class="control-label"></label>
                <select asp-for="PoliklinikId" class="form-control" asp-items="ViewBag.Poliklinikler"></select>
                <span asp-validation-for="PoliklinikId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
